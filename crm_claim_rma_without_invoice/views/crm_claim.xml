<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="crm_claim_rma_form_view_editable">
            <field name="name">CRM - Claim product return Form editable</field>
            <field name="model">crm.claim</field>
            <field name="inherit_id" ref="crm_claim_rma.crm_claim_rma_form_view"/>
            <field name="arch" type="xml">
                    <field name="claim_line_ids" position="attributes" >
                        <attribute name="editable">bottom</attribute>
                    </field>
                    <xpath expr="/tree[@string='Returned lines']" >
                        <attribute name="create">true</attribute>
                    </xpath>
            </field>
        </record>
    </data>
</openerp>
